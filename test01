package com.optum.fads.authorization.api.dto;

import java.io.Serializable;

import org.springframework.security.core.GrantedAuthority;

import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;

/**
 * Role with nested FADS, PGP (SUR), and Case permissions.
 */
@Data
@Builder
@NoArgsConstructor
@AllArgsConstructor
public class Role implements GrantedAuthority, Serializable {
    private static final long serialVersionUID = 1L;

    /** Group id for the primary role context (often SUR group id). */
    private Long groupId;

    /** Display/authority name of the role. */
    private String roleName;

    /** FADS role block (component → modules → elements). */
    private FadsRole fadsRole;

    /** PGP/SUR role block. */
    private PgpRole pgpRole;

    /** Case Tracking role block. */
    private CaseRole caseRole;

    @Override
    public String getAuthority() {
        // If you prefer Spring-style prefix, return "ROLE_" + roleName
        return roleName;
    }
}
