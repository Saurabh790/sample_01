@Query("""
  SELECT j FROM JobMasterT j
  WHERE LOWER(j.jobLuStatusT.statusDesc) LIKE :jobSt
    AND LOWER(j.prmStudyMasterT.pbName)   LIKE :studyNm
    AND TRIM(LOWER(j.createUsr))          = TRIM(LOWER(:userId))
    AND EXISTS (
        SELECT 1 FROM UiUserBase u
        WHERE TRIM(LOWER(u.uiUserId)) = TRIM(LOWER(j.createUsr))
          AND LOWER(CONCAT(u.uiFirstName, ' ', u.uiLastName)) LIKE :createdBy
    )
""")
List<JobMasterT> getMyJobsBySearchCriteria(
    @Param("jobSt") String jobSt,
    @Param("studyNm") String studyNm,
    @Param("createdBy") String createdBy,
    @Param("userId") String userId,
    Pageable pageRequest
);
@Column(name = "CREATE_USR")
private String createUsr;
