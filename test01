package com.optum.fads.pgp.behavior.api.config;

import java.util.Collection;
import java.util.Collections;
import java.util.Optional;
import java.util.stream.Collectors;
import java.util.stream.Stream;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.core.convert.converter.Converter;
import org.springframework.security.authentication.AbstractAuthenticationToken;
import org.springframework.security.authentication.BadCredentialsException;
import org.springframework.security.authentication.UsernamePasswordAuthenticationToken;
import org.springframework.security.core.GrantedAuthority;
import org.springframework.security.core.authority.SimpleGrantedAuthority;
import org.springframework.security.oauth2.jwt.Jwt;

import com.optum.fads.pgp.behavior.api.service.IUserDetailsService;

public class UserJwtAuthenticationConverter implements Converter<Jwt, AbstractAuthenticationToken> {

    private static final Logger log = LoggerFactory.getLogger(UserJwtAuthenticationConverter.class);

    private static final String GROUPS_CLAIM = "groups";
    private static final String ROLE_PREFIX = "ROLE_";

    private final IUserDetailsService userDetailsService;

    public UserJwtAuthenticationConverter(IUserDetailsService userDetailsService) {
        this.userDetailsService = userDetailsService;
    }

    @Override
    public AbstractAuthenticationToken convert(Jwt jwt) {
        log.debug("Converting JWT to Authentication. Claims = {}", jwt.getClaims());

        Collection<GrantedAuthority> authorities = extractAuthorities(jwt);

        String username = getUniqueID(jwt);
        log.debug("Resolved username from JWT = '{}'", username);

        return Optional.ofNullable(userDetailsService.loadUserByUsername(username))
                .map(u -> {
                    log.debug("Successfully loaded user '{}' from UserDetailsService", username);
                    return new UsernamePasswordAuthenticationToken(u, "n/a", authorities);
                })
                .orElseThrow(() -> {
                    log.error("Authentication failed. No user found for '{}'", username);
                    return new BadCredentialsException("No user found");
                });
    }

    private Collection<GrantedAuthority> extractAuthorities(Jwt jwt) {
        return this.getGroups(jwt).stream()
                .map(authority -> ROLE_PREFIX + authority.toUpperCase())
                .map(SimpleGrantedAuthority::new)
                .collect(Collectors.toList());
    }

    @SuppressWarnings("unchecked")
    private Collection<String> getGroups(Jwt jwt) {
        Object groups = jwt.getClaims().get(GROUPS_CLAIM);
        if (groups instanceof Collection) {
            return (Collection<String>) groups;
        }
        return Collections.emptyList();
    }

    /**
     * Option B: Use UPN/email/unique_name/sub in priority order
     */
    private String getUniqueID(Jwt jwt) {
        return Stream.of(
                        jwt.getClaimAsString("upn"),
                        jwt.getClaimAsString("unique_name"),
                        jwt.getClaimAsString("email"),
                        jwt.getClaimAsString("preferred_username"),
                        jwt.getClaimAsString("sub")
                )
                .filter(v -> v != null && !v.isBlank())
                .findFirst()
                .orElseThrow(() -> {
                    log.error("No valid claim (upn/email/unique_name/sub) found in JWT");
                    return new BadCredentialsException("Invalid token - no identity claim");
                });
    }
}







package com.optum.fads.pgp.behavior.api.service.impl;

import java.util.ArrayList;
import java.util.List;
import java.util.Optional;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.core.userdetails.UserDetails;
import org.springframework.security.core.userdetails.UsernameNotFoundException;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.optum.fads.pgp.behavior.api.domain.SeSurGrpModAccess;
import com.optum.fads.pgp.behavior.api.domain.UiUserBase;
import com.optum.fads.pgp.behavior.api.dto.AccessLevel;
import com.optum.fads.pgp.behavior.api.dto.AppUser;
import com.optum.fads.pgp.behavior.api.dto.ModuleAccess;
import com.optum.fads.pgp.behavior.api.dto.Role;
import com.optum.fads.pgp.behavior.api.repo.UserRepository;
import com.optum.fads.pgp.behavior.api.service.IUserDetailsService;

@Service
public class UserDetailsService implements IUserDetailsService {

    private static final Logger log = LoggerFactory.getLogger(UserDetailsService.class);

    @Autowired
    UserRepository userRepository;

    @Override
    @Transactional(readOnly = true)
    public UserDetails loadUserByUsername(String username) throws UsernameNotFoundException {

        log.debug("Loading user by username/email '{}'", username);

        Optional<UiUserBase> optional = userRepository.findByUiEMailAddressIgnoreCase(username);

        if (optional.isEmpty()) {
            log.debug("No user found by email '{}', trying userId lookup...", username);
            optional = userRepository.findByUiUserIdIgnoreCase(username);
        }

        UiUserBase uiUserBase = optional.orElseThrow(() -> {
            log.warn("No user found in DB for '{}'", username);
            return new UsernameNotFoundException("Not found: " + username);
        });

        log.debug("Found user in DB: uiUserId={}, uiSystemId={}, email={}",
                uiUserBase.getUiUserId(),
                uiUserBase.getUiSystemId(),
                uiUserBase.getUiEMailAddress());

        // Build AppUser
        AppUser user = new AppUser();
        user.setUserEmail(uiUserBase.getUiEMailAddress());
        user.setUserId(uiUserBase.getUiUserId());
        user.setUserSystemId(uiUserBase.getUiSystemId());

        Role role = new Role();
        role.setId(Long.valueOf(uiUserBase.getSeUsrGrp().getSeSurGrp().getSurGrpId()).toString());
        role.setRoleName(uiUserBase.getSeUsrGrp().getSeSurGrp().getSurGrpName());

        List<SeSurGrpModAccess> surAccesses =
                uiUserBase.getSeUsrGrp().getSeSurGrp().getSeSurGrpModAccesses();

        List<AccessLevel> accesses = new ArrayList<>();
        surAccesses.forEach(surModuleAccess -> {
            accesses.add(new AccessLevel(
                    surModuleAccess.getId().getSurModuleId(),
                    ModuleAccess.getByName(surModuleAccess.getId().getSurModuleId()).toString(),
                    surModuleAccess.getSeSurModule().getSurModuleName(),
                    surModuleAccess.getSeSurAccess().getSurAccessId()
            ));
        });

        role.setAllowedAccesses(accesses);
        user.setRole(role);

        log.debug("Built AppUser '{}' with {} access entries", username, accesses.size());
        return user;
    }
}



Optional<UiUserBase> findByUiEMailAddressIgnoreCase(String email);

Optional<UiUserBase> findByUiUserIdIgnoreCase(String userId);
