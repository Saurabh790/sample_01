@Query("""
SELECT j FROM JobMasterT j
JOIN j.jobLuStatusT s
JOIN j.prmStudyMasterT p
JOIN j.createUiUserBase u
WHERE LOWER(s.statusDesc)    LIKE :jobSt
  AND LOWER(p.pbName)        LIKE :studyNm
  AND LOWER(u.userFullName)  LIKE :createdBy
  AND LOWER(u.uiUserId)      = LOWER(:userId)
""")
List<JobMasterT> getMyJobsBySearchCriteria(
    String jobSt, String studyNm, String createdBy, String userId, Pageable pageRequest
);
