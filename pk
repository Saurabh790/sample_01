@Test
void started_setsDefaultTimezone_toWhatJavaResolvesUtcMinus4To() {
    TimeZone expected = TimeZone.getTimeZone("UTC-4"); // may resolve to GMT on some JDKs
    CommonConfig cfg = new CommonConfig();

    cfg.started();

    TimeZone actual = TimeZone.getDefault();
    assertNotNull(actual);

    // Compare what Java resolves, not a hardcoded offset
    assertEquals(expected.getID(), actual.getID());
    assertEquals(expected.getRawOffset(), actual.getRawOffset());
}
