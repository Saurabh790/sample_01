package com.optum.fads.casereminders.api.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Component;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RestController;

import com.optum.fads.casereminders.api.exception.CaseEntryApiException;
import com.optum.fads.casereminders.api.service.IReminderEmailService;

import lombok.extern.slf4j.Slf4j;
/**
 * Controller class containing routes for API business logic.
 *
 */
@Component
@RestController
@CrossOrigin
@Slf4j
public class RemindersController {

   // private ResponseBuilder responseBuilder;
      
    @Autowired
  	private IReminderEmailService reminderEmailService;
	
	/**
	 * this method will request send reminders email
	 * 
	 * @param - none
	 */
	
	@PostMapping(value = { "/sendreminders" })
	public ResponseEntity<String> sendReminders() {
		try {
			reminderEmailService.sendAllReminderMails();
			return ResponseEntity.status(HttpStatus.OK).body("postReminderssMailSuccess");
		} catch (Exception ex) {
			log.error(ex.getMessage());
			return ResponseEntity.status(HttpStatus.BAD_REQUEST).body(ex.getMessage());
		}
		
	}

}

above is controllller real one and bleow ar ethe test cases written currnelty 


package com.optum.fads.casereminders.api.controller;
import static org.junit.Assert.assertEquals;
import static org.junit.Assert.assertNotNull;
import static org.mockito.Mockito.doReturn;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.mockito.Mock;
import org.mockito.junit.MockitoJUnitRunner;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.test.context.web.WebAppConfiguration;

import com.optum.fads.casereminders.api.common.constants.CaseEntryConstants;

@RunWith(MockitoJUnitRunner.class)
@WebAppConfiguration
public class RemindersControllerTests {

    @Mock
    private RemindersController remindersController;
    
 
	@Test
	public void sendRemindersTest(){	 
		
    	ResponseEntity responseEntity = new ResponseEntity(HttpStatus.OK);
    	responseEntity.ok(CaseEntryConstants.SUCCESS_MESSAGE);
		doReturn(responseEntity).when(remindersController).sendReminders();
		ResponseEntity retResponseEntity = remindersController.sendReminders();
        assertNotNull(responseEntity);
        String status = (String) responseEntity.getBody();
        String retStatus = (String) retResponseEntity.getBody();
		assertEquals(status, retStatus);
    	
   } 
	
}
