[
  {
    "name": "CA_BATCH_ROWSEQ",
    "is_identity": "False",
    "default_constraint_name": "DF_CA_UNIVERSE_BATCH_ROWSEQ",
    "default_definition": "(NEXT VALUE FOR [dbo].[SEQ_CA_UNIVERSE_BATCH_ROWSEQ])"
  }
]



SELECT 
    c.name,
    c.is_identity,
    dc.name AS default_constraint_name,
    dc.definition AS default_definition
FROM sys.columns c
LEFT JOIN sys.default_constraints dc
    ON dc.parent_object_id = c.object_id
   AND dc.parent_column_id = c.column_id
WHERE c.object_id = OBJECT_ID('dbo.CA_UNIVERSE_BATCH_T')
  AND c.name = 'CA_BATCH_ROWSEQ';
  
