import org.springframework.data.jpa.repository.EntityGraph;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.JpaSpecificationExecutor;

import java.util.Optional;

import com.optum.fads.userroles.api.domain.SeUsrGrp;

public interface SeUsrGrpRepository 
        extends JpaRepository<SeUsrGrp, String>, JpaSpecificationExecutor<SeUsrGrp> {

    boolean existsByUiSystemId(String uiSystemId);

    @Override
    @EntityGraph(attributePaths = "fadsGrp")
    Optional<SeUsrGrp> findById(String uiSystemId);
}
