<!-- Route Log4j 1.x to SLF4J/Logback -->
<dependency>
  <groupId>org.slf4j</groupId>
  <artifactId>log4j-over-slf4j</artifactId>
  <version>1.7.36</version> <!-- or your BOM-managed version -->
</dependency>

<!-- Route commons-logging to SLF4J/Logback (often useful) -->
<dependency>
  <groupId>org.slf4j</groupId>
  <artifactId>jcl-over-slf4j</artifactId>
  <version>1.7.36</version>
</dependency>
