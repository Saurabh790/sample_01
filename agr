<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Base log file -->
    <property name="LOG_FILE" value="C:/Users/sgupt664/fads_dev/fadslog.log" />

    <!-- Rolling appender with size-based policy -->
    <appender name="ROLLING"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeBasedRollingPolicy">
            <!-- Roll when file reaches 5 MB -->
            <maxFileSize>5MB</maxFileSize>
            <!-- Keep up to 10 old files -->
            <fileNamePattern>C:/Users/sgupt664/fads_dev/fads_sso.%i.log</fileNamePattern>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="ROLLING"/>
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Package-specific levels -->
    <logger name="org.springframework" level="DEBUG"/>
    <logger name="org.springframework.web" level="DEBUG"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>

</configuration>
