@Test
void postConstruct_shouldSetTimezone() {
    TimeZone old = TimeZone.getDefault();
    try {
        CommonConfig cfg = new CommonConfig();
        cfg.started();

        TimeZone expected = TimeZone.getTimeZone("UTC-4");
        TimeZone actual = TimeZone.getDefault();

        assertEquals(expected.getID(), actual.getID());
        assertEquals(expected.getRawOffset(), actual.getRawOffset());
    } finally {
        TimeZone.setDefault(old);
    }
}
