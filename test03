SELECT
  TRIM(HDR_CLM_TCN) AS HDR_CLM_TCN,
  TRIM(LI_NUM) AS LI_NUM,
  HDR_CLM_PD_DT,
  TRIM(HDR_PAY_TO_PROV_ID) AS HDR_PAY_TO_PROV_ID,
  HDR_RECIP_FULL_NM
FROM DM_CLAIM_DRUG_T
WHERE (TRIM(HDR_CLM_TCN), TRIM(LI_NUM)) IN (
  ('2520207004713','1'),
  ('2520207005248','1'),
  ('2520207005560','1'),
  ('2520207005567','1'),
  ('2520207008736','1'),
  ('2520207008805','1')
)
ORDER BY 1,2,3;



SELECT
  TRIM(HDR_CLM_TCN) AS HDR_CLM_TCN,
  TRIM(LI_NUM) AS LI_NUM,
  TO_DATE(HDR_CLM_PD_DT) AS HDR_CLM_PD_DT,
  TRIM(HDR_PAY_TO_PROV_ID) AS HDR_PAY_TO_PROV_ID,
  HDR_RECIP_FULL_NM
FROM DM_CLAIM_DRUG_T
WHERE (TRIM(HDR_CLM_TCN), TRIM(LI_NUM), TO_DATE(HDR_CLM_PD_DT)) IN (
  ('2520207004713','1','2020-08-06'::DATE),
  ('2520207005248','1','2020-08-06'::DATE),
  ('2520207005560','1','2020-08-06'::DATE),
  ('2520207005567','1','2020-08-06'::DATE),
  ('2520207008736','1','2020-08-06'::DATE),
  ('2520207008805','1','2020-08-06'::DATE)
)
ORDER BY 1,2,3;
