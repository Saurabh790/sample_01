-- 1) confirm current Snowflake context used by your SQL session
SELECT CURRENT_ACCOUNT(), CURRENT_DATABASE(), CURRENT_SCHEMA(), CURRENT_ROLE(), CURRENT_WAREHOUSE();
-- 2) confirm where DM_CLAIM_DRUG_T exists
SHOW TABLES LIKE 'DM_CLAIM_DRUG_T' IN DATABASE PI_DEV_DB;
-- 3) quick existence check by TCN only
SELECT COUNT(*) AS CNT
FROM PI_DEV_DB.FADS.DM_CLAIM_DRUG_T
WHERE TRIM(HDR_CLM_TCN) IN (
  '2520207004713','2520207005248','2520207005560',
  '2520207005567','2520207008736','2520207008805'
);
