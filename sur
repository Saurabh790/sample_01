server:
  port: 8080
  servlet:
    context-path: /reportgroup

quickstart:
  generateOrderPeriod: 10s
  processOrderPeriod: 30s

spring:
  application:
    name: reportgroup

  cloud:
    azure:
      # ✅ MUST be here (NOT under keyvault)
      credential:
        client-id: ${AZURE_CLIENT_ID}
        client-secret: ${AZURE_CLIENT_SECRET}
        tenant-id: ${AZURE_TENANT_ID}

      keyvault:
        # ✅ singular: secret
        secret:
          endpoint: ${AZURE_KEYVAULT_ENDPOINT}

  datasource:
    # (Boot 3 uses spring.sql.init.mode; this key is harmless but doesn't do much)
    jdbcUrl: jdbc:sqlserver://sql-pi-dev-cus-001.database.windows.net:1433;databaseName=pi-dev-db;encrypt=true;trustServerCertificate=true;
    driverClassName: com.microsoft.sqlserver.jdbc.SQLServerDriver

    # these are KeyVault secret NAMES (your ServiceConfig uses SecretClient to resolve them)
    userName: sql-admin-user
    password: sql-admin-password

  jpa:
    database: SQL_SERVER
    show-sql: false
    hibernate:
      ddl-auto: none

  security:
    oauth2:
      resourceserver:
        jwt:
          jwk-set-uri: ${JWKS_URL}
          jws-algorithms: ${JWS_ALG:RS256}

management:
  endpoint:
    metrics:
      enabled: true
    prometheus:
      enabled: true
  endpoints:
    web:
      exposure:
        include:
          - health
          - info
          - prometheus
  prometheus:
    metrics:
      export:
        enabled: true
